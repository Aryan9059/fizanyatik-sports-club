<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/apxi_score_parent"
        android:hint="APXI Score"
        app:hintTextColor="@color/ui_accent3"
        app:placeholderTextColor="@color/ui_accent3"
        android:textColorHint="@color/text_sec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/apxi_score"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:hint="APXI Overs"
        android:id="@+id/apxi_over_parent"
        android:layout_below="@id/apxi_score_parent"
        app:hintTextColor="@color/ui_accent3"
        app:placeholderTextColor="@color/ui_accent3"
        android:textColorHint="@color/text_sec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/apxi_over"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:hint="PSXI Score"
        android:id="@+id/psxi_score_parent"
        android:layout_below="@id/apxi_over_parent"
        app:hintTextColor="@color/ui_accent3"
        app:placeholderTextColor="@color/ui_accent3"
        android:textColorHint="@color/text_sec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/psxi_score"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:hint="PSXI Overs"
        android:id="@+id/psxi_over_parent"
        android:layout_below="@id/psxi_score_parent"
        app:hintTextColor="@color/ui_accent3"
        app:placeholderTextColor="@color/ui_accent3"
        android:textColorHint="@color/text_sec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/psxi_over"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Match Result"
        android:id="@+id/match_ending_parent"
        android:layout_below="@id/psxi_over_parent"
        app:hintTextColor="@color/ui_accent3"
        app:placeholderTextColor="@color/ui_accent3"
        android:textColorHint="@color/text_sec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/match_ending"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>