<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:layout_height="wrap_content"
    android:gravity="right">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_image"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="130dp"
        android:background="@drawable/background_right"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ui_accent1">

            <ProgressBar
                android:id="@+id/lottie_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/ui_accent3"
                android:indeterminateTintMode="src_atop" />

        <ImageView
            android:id="@+id/show_pic"
            android:layout_width="180dp"
            android:scaleType="fitCenter"
            android:transitionName="image_show"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/gsi"
            android:textColor="@color/back_dark"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:layout_gravity="right"
        android:layout_marginRight="3dp"
        android:text=""
        android:layout_marginTop="3dp"
        android:fontFamily="@font/gsl"
        android:textColor="#9E000000"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        />

</LinearLayout>