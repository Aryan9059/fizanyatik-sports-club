<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/ui_accent3</item>
        <item name="colorPrimaryDark">@color/ui_accent1</item>
        <item name="colorAccent">@color/ui_accent3</item>
        <item name="android:navigationBarColor">@color/back_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="material_dialog_background">@color/back_light</item>
        <item name="material_dialog_title_text_color">@color/text_main</item>
        <item name="material_dialog_message_text_color">@color/text_sec</item>
        <item name="material_dialog_positive_button_color">@color/ui_accent3</item>
        <item name="material_dialog_positive_button_text_color">@color/back_light</item>
        <item name="material_dialog_negative_button_text_color">@color/ui_accent3</item>
    </style>

    <style name="ChatTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/ui_accent3</item>
        <item name="colorPrimaryDark">@color/ui_accent1</item>
        <item name="colorAccent">@color/ui_accent3</item>
        <item name="android:navigationBarColor">@color/ui_accent1</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="material_dialog_background">@color/back_light</item>
        <item name="material_dialog_title_text_color">@color/text_main</item>
        <item name="material_dialog_message_text_color">@color/text_sec</item>
        <item name="material_dialog_positive_button_color">@color/ui_accent3</item>
        <item name="material_dialog_positive_button_text_color">@color/back_light</item>
        <item name="material_dialog_negative_button_text_color">@color/ui_accent3</item>
    </style>

    <style name="AppTheme.ChatTheme1" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/ui_accent3</item>
        <item name="colorPrimaryDark">@color/ui_accent1</item>
        <item name="colorAccent">@color/ui_accent3</item>
        <item name="android:navigationBarColor">@color/ui_accent1</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="material_dialog_background">@color/back_light</item>
        <item name="material_dialog_title_text_color">@color/text_main</item>
        <item name="material_dialog_message_text_color">@color/text_sec</item>
        <item name="material_dialog_positive_button_color">@color/ui_accent3</item>
        <item name="material_dialog_positive_button_text_color">@color/back_light</item>
        <item name="material_dialog_negative_button_text_color">@color/ui_accent3</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialDialog">
        <item name="alertDialogStyle">@style/CustomDialog</item>
    </style>

    <style name="navigation">
        <item name="android:navigationBarColor">@color/back_light</item>
    </style>

    <style name="CustomDialog">
        <item name="android:radius">36dp</item>
    </style>

    <style name="APXI" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/APXI_light</item>
        <item name="android:navigationBarColor">@color/back_light</item>
    </style>

    <style name="PSXI" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/PSXI_light</item>
        <item name="android:navigationBarColor">@color/back_light</item>
    </style>

    <style name="Theme.HomeScreen" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#ffffff</item>
    </style>

    <style name="Exoplayer" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorPrimaryDark">#000000</item>
    </style>

    <style name="Theme.App" parent="Theme.Material3.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorSurface">@color/ui_accent1</item>
        <item name="colorOnSurfaceVariant">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/ui_accent1</item>
        <item name="colorOnSurfaceVariant">@color/ui_accent3</item>
        <item name="android:fontFamily">@font/gsr</item>
        <item name="itemActiveIndicatorStyle">
            @style/Widget.Material3.BottomNavigationView.ActiveIndicator
        </item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">@color/ui_accent3</item>
    </style>

    <style name="Widget.Theme.AppCompat.Light.NoActionBar.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/ui_accent1</item>
    </style>

    <style name="Widget.Theme.AppCompat.Light.NoActionBar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/ui_accent1</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="alarm_alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.FizanyatikSportsClub.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.FizanyatikSportsClub.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
